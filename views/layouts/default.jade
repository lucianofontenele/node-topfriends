html(xmlns:ng="http://angularjs.org")
  head
    title= t('Top Friends')
    link(href='components/font-awesome/css/font-awesome.min.css', rel='stylesheet')
    link(href='css/themes/' + session.theme + '.css', rel='stylesheet')
  body.ng-cloak(ng-controller='MainController')
    .container
      #navbar.navbar.navbar-inverse(role='navigation')
        .container
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#!/')
              i.fa.fa-star.logo-star
              span.logo-brand #{__(config.name)}
          .collapse.navbar-collapse
            ul.nav.navbar-nav
              li
                a.send-message(href='#')
                  i.fa.fa-envelope.send-message
              li.dropdown
                a#themes-dropdown(role='button', data-toggle='dropdown', href='#',sch-dropdown)
                  | #{t('Temas')}
                  b.caret
                ul#menu1.dropdown-menu(role='menu', aria-labelledby='themes-dropdown')
                  each theme, key in config.themes
                    li(role='presentation')
                      a(role='themes-item', href='/change-theme/#{key}') #{theme}

            ul.nav.navbar-nav.pull-right(ng-if="user")
              li.dropdown(style='margin-right:8px')
                a#user-dropdown(role='button', data-toggle='dropdown', href='#',sch-dropdown)
                  img.user-profile-image(ng-src='https://graph.facebook.com/{{user.id}}/picture')
                  | #{t('Logado como')}
                  | 
                  b {{user.name}}
                  b.caret
                ul.dropdown-menu(role='menu', aria-labelledby='user-dropdown')
                  li(role='presentation')
                    a(role='user-item', href='/user/logout')
                      i.fa.fa-sign-out
                      = ' '
                      = t('Sair')

    #main.container
      div(ng-view, style='min-height: 300px')
        h2.text-center 
          i.fa.fa-spin.fa-star.logo-star
          = ' '
          = t('Carregando...')
      #footer
        small
          .pull-right
            a(href='#!/termos')= t('Termos de uso')
            = ' | '
            a(href='#!/privacidade')= t('Politica de privacidade')
            = ' | '
            a(href='#!/privacidade')= t('Suporte')
            = ' | '
            span Wesley Schleumer Desenvolvimento Web
  if session.facebookUser
    input(type='hidden', value=JSON.stringify(session.facebookUser), id='session')
  script(src='components/requirejs/require.js', type='text/javascript')
  script(src='js/config.js', type='text/javascript')
